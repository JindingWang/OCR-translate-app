<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#665b57"
    tools:context="com.example.wangjd7.ocrtranslate.SpeakerActivity">
    <EditText
        android:id="@+id/edit11"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@android:color/background_light"
        android:hint="请输入要翻译的句子"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/button22"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_bright"
        android:text="完成编辑"
        android:onClick="cnenClicked"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/edit11"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edit12"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@android:color/background_light"
        android:hint="翻译的英文"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button21"
        android:onClick="playClicked"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableTop="@drawable/speaker"
        android:layout_below="@+id/edit12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />
</RelativeLayout>
